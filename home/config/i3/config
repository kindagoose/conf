exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1


	##	GPU		##

#exec --no-startup-id /usr/bin/nvidia-settings -a GPUGraphicsClockOffsetAllPerformanceLevels=000 -a GPUMemoryTransferRateOffsetAllPerformanceLevels=000
#exec --no-startup-id /usr/bin/xrandr --output HDMI-0 --mode 1920x1080 --panning 2688x1512 --scale 1.4x1.4
#exec --no-startup-id /usr/bin/nvidia-settings -a CurrentMetaMode="HDMI-0: 1920x1080_60_0 {ViewPortIn=2688x1512, ViewPortOut=1920x1080 ,ResamplingMethod=Bicubic}"
exec --no-startup-id /usr/bin/nvidia-settings -a GPUGraphicsClockOffsetAllPerformanceLevels=200 -a GPUMemoryTransferRateOffsetAllPerformanceLevels=1000


	##	AUTOSTART	##

exec --no-startup-id "GDK_SCALE=2 steam"
